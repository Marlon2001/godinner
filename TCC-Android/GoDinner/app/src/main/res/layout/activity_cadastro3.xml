<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cadastro3Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingEnd="16dp">

                <ImageButton
                    android:id="@+id/btn_voltar"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_back"
                    android:background="@android:color/transparent"
                    android:layout_alignParentStart="true"
                    android:contentDescription="@string/btn_voltar"/>

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:scaleX="1.3"
                    android:scaleY="1.3"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/logo_app"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#a4a2a2"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="24dp"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="26dp"
                android:paddingEnd="22dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_quasela"
                        android:textColor="#222"
                        android:textSize="18sp"
                        android:textAlignment="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:layout_marginTop="24dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lbl_cep"
                                android:textSize="18sp"
                                android:textColor="#555"
                                android:labelFor="@id/txt_cep"
                                android:layout_marginTop="4dp"/>
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/txt_cep_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintEnabled="false"
                                android:orientation="vertical">

                                <com.santalu.maskedittext.MaskEditText
                                    android:id="@+id/txt_cep"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:maxLength="9"
                                    app:met_mask="#####-###"/>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lbl_numero"
                                android:textSize="18sp"
                                android:textColor="#555"
                                android:labelFor="@id/txt_numero"
                                android:layout_marginTop="4dp"/>
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/txt_numero_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintEnabled="false"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/txt_numero"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:maxLength="6"/>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_logradouro"
                        android:textSize="18sp"
                        android:textColor="#555"
                        android:labelFor="@id/txt_logradouro"
                        android:layout_marginTop="4dp"/>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/txt_logradouro_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/txt_logradouro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLength="70"/>
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:id="@+id/text5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_bairro"
                        android:textSize="18sp"
                        android:textColor="#555"
                        android:labelFor="@id/txt_bairro"
                        android:layout_marginTop="4dp"/>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/txt_bairro_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/txt_bairro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLength="30"/>
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:id="@+id/text6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_referencia"
                        android:textSize="18sp"
                        android:textColor="#555"
                        android:labelFor="@id/txt_referencia"
                        android:layout_marginTop="4dp"/>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/txt_referencia_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/txt_referencia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLength="100"/>
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:id="@+id/text9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_complemento"
                        android:textSize="18sp"
                        android:textColor="#555"
                        android:labelFor="@id/txt_complemento"
                        android:layout_marginTop="4dp"/>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/txt_complemento_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/txt_complemento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLength="20"/>
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:id="@+id/text8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_estado"
                        android:textSize="18sp"
                        android:textColor="#555"
                        android:labelFor="@id/spinner_estado"
                        android:layout_marginTop="4dp"/>
                    <Spinner
                        android:id="@+id/spinner_estado"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawSelectorOnTop="true"
                        style="@style/spinner_style" />
                    <TextView
                        android:id="@+id/txt_error_estado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="12sp"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/text7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_cidade"
                        android:textSize="18sp"
                        android:textColor="#555"
                        android:labelFor="@id/spinner_cidade"
                        android:layout_marginTop="4dp"/>
                    <Spinner
                        android:id="@+id/spinner_cidade"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawSelectorOnTop="true"
                        style="@style/spinner_style"/>
                    <TextView
                        android:id="@+id/txt_error_cidade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="12sp"
                        android:visibility="invisible"/>
                </LinearLayout>
            </ScrollView>

            <android.support.design.button.MaterialButton
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/btn_finalizar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_finalizar"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textAlignment="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_below="@id/scrollView"
                android:layout_marginTop="12dp"
                app:backgroundTint="@android:color/transparent"
                app:rippleColor="#33AAAAAA"
                app:strokeColor="#f59c7c"
                app:strokeWidth="2dp"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>