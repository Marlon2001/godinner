<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linear"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="26dp"
    android:paddingStart="26dp"
    android:background="@drawable/border_linearlayout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finalizar Compra"
        android:textAlignment="center"
        android:textColor="#222"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/txt_comentario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="4"
        android:layout_marginTop="8dp"
        android:hint="Sem Cebola e traga troco para R$ 100,00"
        android:inputType="textCapSentences|textMultiLine"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp">

        <android.support.design.button.MaterialButton
            android:id="@+id/btn_cancelar"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="Cancelar"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"
            app:backgroundTint="@android:color/transparent"
            app:rippleColor="#33AAAAAA"
            app:strokeColor="#b3b0b0"
            app:strokeWidth="2dp" />

        <android.support.design.button.MaterialButton
            android:id="@+id/btn_finalizar"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="#E07148"
            android:backgroundTint="#E07148"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="Finalizar"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="14sp"
            app:backgroundTint="@android:color/transparent"
            app:rippleColor="#a33b15"
            app:strokeColor="#E07148"
            app:strokeWidth="2dp" />
    </LinearLayout>
</LinearLayout>