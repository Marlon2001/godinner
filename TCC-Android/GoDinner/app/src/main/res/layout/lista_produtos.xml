<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?attr/selectableItemBackground"
    android:paddingBottom="0dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_produto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:civ_border_width="1dp"
                app:civ_border_color="#999"/>

            <!--<ProgressBar-->
                <!--android:id="@+id/progressImage"-->
                <!--style="@android:style/Widget.ProgressBar.Small"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center|center_vertical"-->
                <!--android:gravity="center|center_vertical"-->
                <!--android:visibility="invisible" />-->
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/nome_produto"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:text="COMBO BURGER Jr"
                android:textSize="16sp"
                android:textColor="#444"
                android:lines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/desc_produto"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginTop="4dp"
                android:text="1 carne, pão com gergelim, queijo, alface, tomate, cebola, picles, maionese BK® e ketchup"
                android:lines="3"
                android:ellipsize="end"/>
            
            <TextView
                android:id="@+id/preco_produto"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:text="R$ 15,00"
                android:layout_marginTop="4dp"
                android:textAlignment="viewEnd"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_orange_dark"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="13dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/linha3"
        android:layout_width="1000dp"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:background="#a4a2a2" />


</LinearLayout>